{
    "manifest_version": 3,
    "name": "Job Tracker",
    "version": "1.0",
    "description": "Checks job descriptions for visa sponsorship information",
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "192": "icons/icon192.png"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "*://*.linkedin.com/*",
      "*://*.indeed.com/*",
      "*://*.glassdoor.com/*"
    ],
    "background": {
      "service_worker": "visa_checking/background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "*://*.linkedin.com/jobs/*",
          "*://*.indeed.com/*jobs*",
          "*://*.glassdoor.com/*job*",
          "*://*/*job*",
          "*://*/*career*"
        ],
        "js": ["visa_checking/content.js"]
      }
    ],
    "action": {
      "default_popup": "visa_checking/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "192": "icons/icon192.png"
      }
    }
  }